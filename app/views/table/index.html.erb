<div class="table_background">

  <% if current_player %>

  <div class="container text-center">
    <div id="not-joined">
    <br />
      <%= link_to "Join", join_path, remote: true, class: 'join-link btn btn-warning' %>
    </div>

    <div id="joined" class="row">
    <br />
      <a href="#" class="leave-link btn btn-danger">Leave</a>
      <br />
      <span id="start" display="none">
        <%= link_to "Start", start_path, remote: true, class: 'start-link btn btn-primary' %>
      </span>
      <div></div><br />
      <div class="top_border">
        <h3> Players at table: </h3>
        <div id="players">
        </div>
      </div>
    </div>
    <br />

    <div id="player-hand" class="container-fluid">
    </div>

    <div id="commoncards" class="container-fluid">
      <div class="flop"></div>
      <div class="turnriver">
        <div class="turn"></div>
        <div class="river"></div>
      </div>
    </div>

    <div id="player_actions row">
      <div class="player_actions_child" style="display: none;">
        <div><%= link_to "Check", check_path, remote: true, class: 'check-link btn btn-primary' %></div>
        <div><%= link_to "Call", call_bet_path, remote: true, class: 'call-link btn btn-warning' %></div>
        <div><%= link_to "Fold", fold_path, remote: true, class: 'fold-link btn btn-danger' %></div>
        <div class="raise">
          <%= form_tag raise_bet_path, remote: true do %>
            <%= number_field_tag 'bet' %>
            <%= submit_tag "Raise", class: "raise-button btn btn-info" %>
          <% end %>
        </div>
      </div>

    <!--     <a href="#" class="leave-game-link">Give Up!</a> -->


      <div class="bet"></div>
    </div>
    <div><br /></div>
    <div id="messages">
    </div>
  </div>
<!--   <% end %> -->
</div>

